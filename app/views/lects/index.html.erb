<p id="notice"><%= notice %></p>

<h1>Listing Lects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Attach</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lects.each do |lect| %>
      <tr>
        <td><%= lect.title %></td>
        <td><%= lect.content %></td>
        <td><%= lect.attach %></td>
        <td><%= link_to 'Show', lect %></td>
        <% if current_user&&lect.user==current_user %>
            <td><%= link_to 'Edit', edit_lect_path(lect) %></td>
            <td><%= link_to 'Delete', lect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

