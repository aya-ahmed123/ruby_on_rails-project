<style >
  body{
    background-image: url("/assets/img/backgrounds/1.jpg");
    background-size: cover ;
    background-repeat: no-repeat;
}

.tr{
  background-color: rgba(255,2000,200,0.4);
}

h4{
  color: white;
  font-weight: bold;
}
</style>

<div class="container">
<h1 class="btn-info">Courses</h1>
<div class="tr">
    <table class="table">
      <thead>
        <tr >
          <th colspan="2" class=" btn-warning"><h4>Title</h4></th>
          <th class=" btn-warning"><h4>created_by</h4></th>
          <th colspan="3" class=" btn-warning"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><h4><%= course.title %></h4></td>
            <td><img src="<%= course.image %>" width="80" height="80"></td>
            <td><h4><%= course.user.name %></h4></td>
            <td><h4><%= link_to 'Show', course,class:"btn btn-info" %></h4></td>
            <% if current_user &&course.user==current_user%>
              <td><h4><%= link_to 'Edit', edit_course_path(course),class:"btn btn-info" %></h4></td>
              <td><h4><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></h4></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>
<br>


